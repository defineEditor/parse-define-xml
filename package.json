{
    "name": "parse-define-xml",
    "version": "0.1.5",
    "description": "Parse Define-XML files",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "keywords": [
        "cdisc",
        "define-xml"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/defineEditor/parse-define-xml.git"
    },
    "author": "Dmitry Kolosov",
    "license": "MIT",
    "scripts": {
        "test": "jest",
        "coverage": "jest --coverage",
        "build": "rm -f tsconfig.tsbuildinfo && rm -rf dist && tsc",
        "release": "npm run lint && npm run test && npm run build && npm publish",
        "lint": "eslint . --ignore-pattern 'dist'"
    },
    "jest": {
        "rootDir": ".",
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleFileExtensions": [
            "js",
            "ts",
            "json"
        ],
        "moduleNameMapper": {
            "^interfaces/(.*)$": "<rootDir>/src/interfaces/$1",
            "^parser/(.*)$": "<rootDir>/src/parser/$1"
        },
        "transform": {
            "\\.(ts|tsx)$": [
                "ts-jest",
                {}
            ],
            "^.+\\.tsx?$": [
                "ts-jest",
                {}
            ]
        },
        "testPathIgnorePatterns": [
            "<rootDir>/dist/"
        ]
    },
    "devDependencies": {
        "@eslint/js": "^9.32.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.39.0",
        "@types/jest": "^30.0.0",
        "@types/xml2js": "^0.4.14",
        "jest": "^30.0.5",
        "ts-jest": "^29.4.1"
    },
    "dependencies": {
        "xml2js": "^0.6.2"
    }
}
